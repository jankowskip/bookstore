<ul class="breadcrumbs">
  <li><a href='<%= root_path %>'>Home</a></li>
  <li class="current">Authors</li>
</ul>

<h1>Authors</h1>
<ul class='authors small-block-grid-3'>
  <% @authors.each do |author| %>
    <li class='authors__author'>
      <a href='<%= author_path author %>'>
      <%= image_tag author.image.url(:medium) %>
      <div class='authors__author-name'>
        <%= author.name %>
      </div>
      </a>
    </li>
  <% end %>
</ul>
