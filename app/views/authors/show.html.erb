<ul class="breadcrumbs">
  <li><a href='<%= root_path %>'>Home</a></li>
  <li><a href='<%= authors_path %>'>Authors</a></li>
  <li class="current"><%= @author.name %></li>
</ul>

<h1><%= @author.name %></h1>
<p><%= @author.bio %></p>

<ul class='books small-block-grid-3'>
  <% @author.books.each do |book| %>
    <li class='book'>
      <a href='<%= book_path book %>'>
      <div class='panel'>
        <%= book.title %>
      </div>
      </a>
    </li>
  <% end %>
</ul>
