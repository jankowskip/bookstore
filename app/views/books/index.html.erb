<ul class="breadcrumbs">
  <li><a href='<%= root_path %>'>Home</a></li>
  <li class="current">Books</li>
</ul>

<h1>Books</h1>
<ul class='books small-block-grid-1 medium-block-grid-3'>
  <% @books.each do |book| %>
    <li class='books__book'>
      <a href='<%= book_path book %>'>
        <%= image_tag book.image.url(:medium) %>
        <div class='books__book-title'>
          <%= book.title %>
        </div>
      </a>
    </li>
  <% end %>
</ul>
