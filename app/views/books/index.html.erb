<ul class="breadcrumbs">
  <li><a href='<%= root_path %>'>Home</a></li>
  <li class="current">Books</li>
</ul>

<h1>Books</h1>
<ul class='books small-block-grid-3'>
  <% @books.each do |book| %>
    <li class='book'>
      <a href='<%= book_path book %>'>
      <div class='panel'>
        <%= book.title %>
      </div>
      </a>
    </li>
  <% end %>
</ul>
